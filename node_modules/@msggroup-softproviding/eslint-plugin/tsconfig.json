{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "outDir": "dist/"
  },
  "include": ["src/**/*", "test/*.test.ts", "rules", "index.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
