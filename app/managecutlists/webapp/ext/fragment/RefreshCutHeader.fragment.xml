<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:macros="sap.fe.macros"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<HBox id="RefreshCutHeaderContainerHBox">
		<VBox id="RefreshCutHeaderContainer" alignItems="Start" core:require="{ handler: 'test/disassembly/managecutlists/ext/fragment/RefreshCutHeader'}" visible="{= ${ui>/editMode} === 'Editable'}">
			<Button id="RefreshCutHeaderButton" icon="sap-icon://synchronize" text="Upgrade to latest version" press="handler.onPress" visible="{= ${path:'isCutHeaderLatestVersion', targetType: 'any'} === false &amp;&amp; ${path:'type', targetType: 'any'} === 'H' }"/>
			<HBox id="RefreshCutHeaderUpToDateContainer" visible="{= ${path:'isCutHeaderLatestVersion', targetType: 'any'} === true &amp;&amp; ${path:'type', targetType: 'any'} === 'H' }">
				<ObjectStatus id="RefreshCutHeaderUpToDateObjectStatus"
					text="Already up-to-date"
					icon="sap-icon://sys-enter"
				/>
			</HBox>
		</VBox>
		<VBox id="RefreshCutHeaderContainerNotEditable" alignItems="Start" core:require="{ handler: 'test/disassembly/managecutlists/ext/fragment/RefreshCutHeader'}" visible="{= ${ui>/editMode} === 'Display'}">
			<ObjectStatus id="RefreshCutHeaderUpToDateObjectStatusNotEditable" visible="{= ${path:'isCutHeaderLatestVersion', targetType: 'any'} === true &amp;&amp; ${path:'type', targetType: 'any'} === 'H' }"
				text="Already up-to-date"
				icon="sap-icon://sys-enter"
			/>
			<ObjectStatus id="RefreshCutHeaderObjectStatusNotEditable" visible="{= ${path:'isCutHeaderLatestVersion', targetType: 'any'} === false &amp;&amp; ${path:'type', targetType: 'any'} === 'H' }"
					text="Can be upgraded to latest version"
					icon="sap-icon://synchronize"
			/>
		</VBox>
	</HBox>
</core:FragmentDefinition>